{
  "manifest_version": 3,
  "name": "손 제스처 스크롤 컨트롤러",
  "version": "1.0.0",
  "description": "손 제스처로 모든 브라우저 탭의 스크롤을 제어하세요",
  "permissions": ["activeTab", "tabs", "scripting", "camera"],
  "host_permissions": ["<all_urls>"],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["help.html", "help.js", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "손 제스처 스크롤 컨트롤러"
  },
  "icons": {
    "16": "icons/icon.svg",
    "32": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  }
}
